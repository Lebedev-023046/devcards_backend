generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id      String   @id @default(uuid())
  title   String
  options Option[]
}

model Option {
  id        String  @id @default(uuid())
  text      String
  isCorrect Boolean
  card      Card    @relation(fields: [cardId], references: [id])
  cardId    String
}
