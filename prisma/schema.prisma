generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  role     Role   @default(USER)
  decks    Deck[] @relation("UserDecks")

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  userCardStatus UserCardStatus[]
  FavoriteDecks  FavoriteDeck[]
}

model Deck {
  id          String  @id @default(uuid())
  title       String
  description String?
  isPublic    Boolean @default(true)

  owner   User   @relation("UserDecks", fields: [ownerId], references: [id])
  ownerId String

  cards Card[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  favoriteDecks FavoriteDeck[]
}

model FavoriteDeck {
  id        String   @id @default(cuid())
  userId    String
  deckId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  deck Deck @relation(fields: [deckId], references: [id])

  @@unique([userId, deckId])
}

enum CardType {
  SINGLE_CHOICE
  MULTI_CHOICE
  INFO
}

model Card {
  id       String   @id @default(uuid())
  question String
  type     CardType @default(SINGLE_CHOICE)

  deck   Deck   @relation(fields: [deckId], references: [id])
  deckId String

  options Option[]

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  userCardStatus UserCardStatus[]
}

model Option {
  id        String  @id @default(uuid())
  text      String
  isCorrect Boolean

  card   Card   @relation(fields: [cardId], references: [id])
  cardId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserCardStatus {
  id             String   @id @default(cuid())
  userId         String
  cardId         String
  correctCount   Int      @default(0)
  attemptCount   Int      @default(0)
  lastReviewedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  card Card @relation(fields: [cardId], references: [id])

  @@unique([userId, cardId])
}
